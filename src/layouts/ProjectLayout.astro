---
// Import the global.css file here so that it is included on
// all pages through the use of the <SEO /> component.

import { ViewTransitions } from 'astro:transitions'
import { SEO } from 'astro-seo'

import Navigation from '../components/layout/Navigation.astro'
import Sidebar from '../components/layout/SideBar'
import { Toaster } from '../components/ui/toaster'
import '../styles/globals.css'
import { type CollectionEntry, getCollection } from 'astro:content'

interface Props {
  post: CollectionEntry<'projects'>
}

export async function getStaticPaths() {
  const posts = await getCollection('projects')
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
    },
  }))
}

const { post } = Astro.props
const { Content } = await post.render()
---

<!doctype html>
<html lang='en'>
  <head>
    <!-- Global Metadata -->

    <meta charset='utf-8' />
    <meta http-equiv='X-UA-Compatible' content='ie=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='sitemap' href='/sitemap-index.xml' />
    <link rel='icon' href='/favicon.svg' />
    <link rel='stylesheet' href='/styles/globals.css' />

    <SEO
      title='Kye Shimizu | Portfolio'
      description='A personal portfolio of Kye Shimizu'
      openGraph={{
        basic: {
          title: 'Kye Shimizu | Portfolio',
          type: 'A type.',
          image: new URL(`/og/${post.slug}.png`, Astro.url.origin).toString(),
        },
      }}
      twitter={{
        creator: '@kyeshimzu',
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: 'icon', href: '/favicon.ico' }],
        // extending the default meta tags
        meta: [
          {
            name: 'twitter:image',
            content: new URL(`/og/${post.slug}.png`, Astro.url.origin).toString(),
          },
          { name: 'twitter:title', content: 'Tinker Tailor Soldier Spy' },
          { name: 'twitter:description', content: 'Agent' },
        ],
      }}
    />

    <ViewTransitions />
  </head>

  <body>
    <Navigation />
    <Sidebar transition:persist />

    <Toaster client:idle client:only='react' />

    <main class='py-6 w-15 mx-6 md:mx-28 my-0 pt-[72px] relative'>
      <slot />
    </main>

