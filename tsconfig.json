{
  "extends": "astro/tsconfigs/strict",
  "skipLibChecks": true,

  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "types": ["bun-types"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["functions/**/*", "node_modules/**/*", "dist/**/*"]
}
